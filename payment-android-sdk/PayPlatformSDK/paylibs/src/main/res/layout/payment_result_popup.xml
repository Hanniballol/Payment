<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/img_popu"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/payment_result_shape"
        android:contentDescription="@null">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="请确认支付是否已完成"
            android:textSize="18sp"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title_tv"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/complete_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:layout_margin="10dp"
            android:text="已完成支付"
            android:textSize="17sp"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/complete_tv"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/restart_tv"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:gravity="center"
            android:text="支付遇到问题，重新支付"
            android:textSize="17sp"/>

    </RelativeLayout>
</RelativeLayout>